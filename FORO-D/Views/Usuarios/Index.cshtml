@model IEnumerable<FORO_D.Models.Usuario>

@{
    ViewData["Title"] = "Index";

}

<h1 class="btn-primary text-center text-white">Lista De Administradores</h1>

<p>
    <a asp-controller="Account" asp-action="CrearAdministrador">Crear nuevo Administrador</a>
</p>
<table class="table">
    <thead class="alert-secondary text-black-50">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
           
             <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                        @if(User.IsInRole("Usuario") && Int32.Parse(User.Claims.First().Value) != @item.Id) { 
                        <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                        }
                    </td>
                    
                </tr>

        }
        </tbody>
</table>
