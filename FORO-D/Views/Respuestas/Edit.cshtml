@model FORO_D.Models.Respuesta

@{ ViewData["Title"] = "Edit"; }

<h1>Editar</h1>

<h4>Respuesta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RespuestaId" />
            <div hidden="hidden" class="form-group">
                <label asp-for="PreguntaId" class="control-label"></label>
                <select asp-for="PreguntaId" class="form-control" asp-items="ViewBag.PreguntaId"></select>
                <span asp-validation-for="PreguntaId" class="text-danger"></span>
            </div>
            <div hidden="hidden" class="form-group">
                <label asp-for="MiembroId" class="control-label"></label>
                <select asp-for="MiembroId" class="form-control" asp-items="ViewBag.MiembroId"></select>
                <span asp-validation-for="MiembroId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <textarea asp-for="Descripcion" class="form-control"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div hidden="hidden" class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Preguntas" asp-action="Details" asp-route-id="@Model.PreguntaId">Atras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
