@model FORO_D.Models.Entrada

@{ ViewData["Title"] = "Edit"; }

<h1>Editar</h1>

<h4>Entrada</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EntradaId" />
            <div hidden class="form-group">
                <label asp-for="CategoriaId" class="control-label"></label>
                <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>
            <div hidden class="form-group">
                <label asp-for="MiembroId" class="control-label"></label>
                <select asp-for="MiembroId" class="form-control" asp-items="ViewBag.MiembroId"></select>
                <span asp-validation-for="MiembroId" class="text-danger"></span>
            </div>
            <div hidden class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <select asp-for="Fecha" class="form-control" asp-items="ViewBag.Fecha"></select>
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            @if (Model.Preguntas.Any())
            {
<div class="form-group">
    <label asp-for="Titulo" class="control-label"></label>
    <input readonly asp-for="Titulo" class="form-control" />
    <span asp-validation-for="Titulo" class="text-danger"></span>
</div>
                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label"></label>
                    <textarea readonly asp-for="Descripcion" class="form-control"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div> }
                            else
                            {
                <div class="form-group">
                    <label asp-for="Titulo" class="control-label"></label>
                    <input  asp-for="Titulo" class="form-control" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>
                                <div class="form-group">
                                    <label asp-for="Descripcion" class="control-label"></label>
                                    <textarea  asp-for="Descripcion" class="form-control"></textarea>
                                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                                </div>            }
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Privada" /> @Html.DisplayNameFor(model => model.Privada)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Atras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}