@model FORO_D.Models.Pregunta

@{
    ViewData["Title"] = "Edit";
    int cantRespuestas = ViewBag.cantRespuestas;
}

<h1>Editar</h1>

<h4>Pregunta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PreguntaId" />
            <div hidden class="form-group">
                <label asp-for="EntradaId" class="control-label"></label>
                <select asp-for="EntradaId" class="form-control" asp-items="ViewBag.EntradaId"></select>
                <span asp-validation-for="EntradaId" class="text-danger"></span>
            </div>
            <div hidden class="form-group">
                <label asp-for="MiembroId" class="control-label"></label>
                <select asp-for="MiembroId" class="form-control" asp-items="ViewBag.MiembroId"></select>
                <span asp-validation-for="MiembroId" class="text-danger"></span>
            </div>
            <div hidden class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <select asp-for="Fecha" class="form-control" asp-items="ViewBag.Fecha"></select>
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            @if (cantRespuestas<=0)
            {
                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label"></label>
                    <textarea asp-for="Descripcion" class="form-control"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div> }
            else
            {
                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label"></label>
                    <textarea readonly asp-for="Descripcion" class="form-control"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
            }
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Activa" /> @Html.DisplayNameFor(model => model.Activa)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Preguntas" asp-action="Details" asp-route-id=@Model.PreguntaId>Atrás</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
